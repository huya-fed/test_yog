{
  "name"        : "yog-xjl",  // 应用名称
  "script"      : "./app.js",  // 实际启动脚本
  "watch": [  // 监控变化的目录，一旦变化，自动重启
    "app",
    "conf",
    "views"
  ],
  "ignore_watch" : [  // 从监控目录中排除
    "node_modules", 
    "pm2_logs",
    "log",
    "static"
  ],
  "watch_options": {
    "followSymlinks": false
  },
  "pid_file"   : "./pm2_logs/child.pid",
  "error_file" : "./pm2_logs/app-err.log",  // 错误日志路径
  "out_file"   : "./pm2_logs/app-out.log",  // 普通日志路径
  "log_date_format" : "YYYY-MM-DD HH:mm Z",
  "env": {
    "YOG_DEBUG": true, // 环境参数，当前指定为生产环境   pm2 start start.json --env dev
    "YOG_ENV": "dev" // 加载不同的配置，比如 conf/ral/test.dev.js
  },
  "env_production" : {
    "NODE_ENV": "production"  // pm2 start start.json --env production
  },
  "deploy" : {
    "production" : {
      "user" : "ganxietx",
      "host" : "192.168.85.128",
      "ref"  : "origin/master", //需要部署的分支
      "repo" : "https://github.com/huya-fed/test_yog.git",
      "path" : "/home/ganxietx/yog/source", //web目录
      "post-deploy" : "npm install && pm2 startOrRestart start.json --env production"
    }
  }
}